{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@systems/*": ["systems/*"]
    }
  },
  "include": ["./src", "src/**/*", "./src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
